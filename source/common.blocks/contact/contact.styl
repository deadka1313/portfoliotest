.contact
  &_icon
    display inline-block
    width 17.36%
    margin-bottom 30px
    svg 
      width 100%
      height 100%

  &_title
    display inline-block
    position relative
    font-family MyriadPro-bold  
    letter-spacing 0.2px
    color mainColor
    font-size: 45px
    vertical-align top
    padding-top 12px
    padding-left 10px
    padding-right 8px
    background white
    z-index 50

  &_line
    position absolute
    width 50%
    right 0
    top 35px
    height 5px
    background mainColor

  &_all
    position relative
    margin-bottom 21px

  &_main-block
    &__left
      display inline-block
      font-family MyriadPro-bold 
      width 30.42%
      font-size 22.66px 
      color mainColor
      margin-bottom 34px
    &__right
      display inline-block
      font-family MyriadPro-regular  
      font-size 22.66px 
