.contact
  margin-bottom 20px
  &_icon
    width 17.36%
    svg 
      width 100%
      height 100%

  &_title
    padding-left 3%
    padding-bottom 8px
    font-family MyriadPro-bold  
    letter-spacing 0.2px
    color mainColor
    font-size: 2.8125rem

  &_line    
    height 5px
    margin 0px 0px 8px 1.7%
    width 36%
    background mainColor

  &_all
    display flex
    flex-direction row
    justify-content flex-start
    flex-wrap nowrap
    align-items center
    margin-bottom 32px

  &_main-block
    &__left
      display inline-block
      font-family MyriadPro-bold 
      width 30.42%
      font-size 22.66px 
      color mainColor
      margin-bottom 34px
    &__right
      display inline-block
      font-family MyriadPro-regular  
      font-size 22.66px 
