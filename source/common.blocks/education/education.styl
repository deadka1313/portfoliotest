.education
  &_icon
    display inline-block
    width 11.76%
    svg 
      width 100%
      height 100%

  &_title
    display inline-block
    position relative
    font-family MyriadPro-bold  
    letter-spacing 0.2px
    color mainColor
    font-size: 45.33px
    vertical-align top
    padding-top 11px
    padding-left 17px
    padding-right 8px
    background white
    z-index 50

  &_line
    position absolute
    width 50%
    right 0
    top 36px
    height 5px
    background mainColor

  &_all
    position relative
    margin-bottom 25px

  &_master  
    display inline-block
    font-family MyriadPro-bold 
    font-size 28.33px
    color mainColor
    margin-right 11px
    margin-bottom 4px

  &_months
    display inline-block
    font-size 28.33px

  &_university
    font-size 28.33px
    padding-bottom 9px
    margin-left 57px


  &_circle
    display inline-block
    width 3.15%
    padding-bottom 3.15%
    background-color black
    border-radius: 50%
    margin-left 14px
    margin-right 19px

  &_text
    margin-left 61px
    padding-bottom 16px