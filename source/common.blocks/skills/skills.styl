.skills
  &_icon
    width 17.36%
    svg 
      width 100%
      height 100%

  &_title
    padding-left 2.5%
    padding-bottom 9px
    font-family MyriadPro-bold  
    letter-spacing 0.2px
    color mainColor
    font-size: 45px

  &_line
    height 5px
    margin 0px 0px 8px 3%
    width 46.5%
    background mainColor

  &_all
    display flex
    flex-direction row
    justify-content flex-start
    flex-wrap nowrap
    align-items center
    margin-bottom 20px

  &_creative
  &_teamwork
  &_innovate
  &_communication
    text-align center
    font-size 28.33px
    padding-left 0.43%
    margin-bottom 10px

  &_circle__maincolor
    display inline-block
    width 4.8%
    padding-bottom 4.8%
    border-radius 50%
    background mainColor
    margin-right 1.75%

  &_circle__secondColor
    display inline-block
    width 4.8%
    padding-bottom 4.8%
    border-radius 50%
    background secondeColor
    margin-right 1.75%

  &_diagram
    padding-left 51px
    margin-bottom 19px