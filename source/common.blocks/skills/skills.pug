mixin skills(creativeNumber, teamworkNumber, innovateNumber, communikationNumber)
  .skills_all
    .skills_icon
      include SKILL_ICON.svg
    .skills_title= "SKILLS"
    .skills_line
    .skills_creative= "CREATIVE"
    .skill_diagram
      - for (var x = 0; x < creativeNumber; x++)
        .skill_circle__maincolor
      - for (var x = 0; x < 12 - creativeNumber; x++)
        .skill_circle__secondColor
    .skills_teamwork= "TEAMWORK"
    .skill_diagram
      - for (var x = 0; x < teamworkNumber; x++)
        .skill_circle__maincolor
      - for (var x = 0; x < 12 - teamworkNumber; x++)
        .skill_circle__secondColor
    .skills_innovate= "INNOVATE"
    .skill_diagram
      - for (var x = 0; x < innovateNumber; x++)
        .skill_circle__maincolor
      - for (var x = 0; x < 12 - innovateNumber; x++)
        .skill_circle__secondColor
    .skills_communication= "COMMUNICATION"
    .skill_diagram
      - for (var x = 0; x < communikationNumber; x++)
        .skill_circle__maincolor
      - for (var x = 0; x < 12 - communikationNumber; x++)
        .skill_circle__secondColor