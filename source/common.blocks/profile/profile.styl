.profile
  &_icon
    width 18.02%
    svg 
      width 100%
      height 100%

  &_title
    padding-left 2.19%
    padding-bottom 5px
    font-family MyriadPro-bold  
    letter-spacing 0.2px
    color mainColor
    font-size: 45px

  &_line
    height 5px
    margin 0px 0px 3px 2%
    width 40.5%
    background mainColor

  &_all
    display flex
    flex-direction row
    justify-content flex-start
    flex-wrap nowrap
    align-items center

  &_text
    padding-top 10px
    line-height 20.5px
    letter-spacing 0.01px
    margin-bottom 51px

  &_text span
    font-family MyriadPro-bold  
    line-height 20.8px
    letter-spacing 0.01px