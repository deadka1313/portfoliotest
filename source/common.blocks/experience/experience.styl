.experience
  &_icon
    width 12.05%
    svg 
      width 100%
      height 100%

  &_title
    padding-left 2.5%
    padding-bottom 8px
    font-family MyriadPro-bold  
    letter-spacing 0.2px
    color mainColor
    font-size: 45.33px

  &_line
    height 5px
    margin 0px 0px 5px 0.2%
    width 50%
    background mainColor

  &_all
    display flex
    flex-direction row
    justify-content flex-start
    flex-wrap nowrap
    align-items center
    margin-bottom 40px
    margin-top 44px

  &_name
    display inline-block
    font-family MyriadPro-bold 
    font-size 28.33px
    color mainColor
    margin-right 1.43%
    
  &_months
    display inline-block
    font-size 28.33px

  &_job
    font-size 28.30px
    margin-left 8.17%
    margin-bottom 8px

  &_circle
    display inline-block
    width 3.15%
    padding-bottom 3.15%
    background-color black
    border-radius: 50%
    margin-left 2%
    margin-right 2.72%

  &_company
    margin-bottom 6px

  &_text
    margin-left 8.60%
    margin-bottom 15px