.experience
  &_icon
    display inline-block
    width 12.05%
    svg 
      width 100%
      height 100%

  &_title
    display inline-block
    position relative
    font-family MyriadPro-bold  
    letter-spacing 0.2px
    color mainColor
    font-size: 45.33px
    vertical-align top
    padding-top 14px
    padding-left 15px
    padding-right 1px
    background white
    z-index 50

  &_line
    position absolute
    width 50%
    right 0
    top 38px
    height 5px
    background mainColor

  &_all
    position relative
    margin-top 43px
    margin-bottom 40px

  &_name
    display inline-block
    font-family MyriadPro-bold 
    font-size 28.33px
    color mainColor
    margin-right 10px
    
  &_months
    display inline-block
    font-size 28.33px

  &_job
    font-size 28.33px
    margin-left 57px
    margin-bottom 8px

  &_circle
    display inline-block
    width 3.15%
    padding-bottom 3.15%
    background-color black
    border-radius: 50%
    margin-left 14px
    margin-right 19px

  &_company
    margin-bottom 6px

  &_text
    margin-left 60px
    margin-bottom 15px