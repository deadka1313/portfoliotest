.software
  &_icon
    display inline-block
    width 11.76%
    margin-bottom 26px
    svg 
      width 100%
      height 100%

  &_title
    display inline-block
    position relative
    font-family MyriadPro-bold  
    letter-spacing 0.2px
    color mainColor
    font-size: 45.33px
    vertical-align top
    padding-top 16px
    padding-left 17px
    padding-right 25px
    background white
    z-index 50

  &_line
    position absolute
    width 50%
    right 0
    top 40px
    height 5px
    background mainColor

  &_all
    position relative
    margin-top 56px

  &_name-program
    &__left  
    &__right  
      font-size: 28.33px
      display inline-block
      margin-bottom 16px
    &__left  
      margin-left 10px
      width 54%
    
  &_program-block  
  &_program-block
    &__left
    &__right
      background secondeColor
      height 24px
      width 43.9%
      display inline-block
      margin-bottom 20px
    &__left
      margin-left 7px
    &__right 
      margin-left 70px

    &__inside
      background mainColor
      height 100%