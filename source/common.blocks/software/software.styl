  //margin-bottom 26px
  &_icon
    width 11.76%
    svg 
      width 100%
      height 100%

  &_title
    padding-left 3%
    padding-top 1px
    font-family MyriadPro-bold  
    letter-spacing 0.2px
    color mainColor
    font-size: 45.33px

  &_line
    height 5px
    margin 5px 0px 0px 3.7%
    width 50%
    background mainColor

  &_all
    display flex
    flex-direction row
    justify-content flex-start
    flex-wrap nowrap
    align-items center
    position relative
    margin-top 56px
    margin-bottom 28px

  &_name-program
    &__left  
    &__right  
      font-size: 28.33px
      display inline-block
      margin-bottom 15px
    &__left  
      margin-left 1.43%
      width 54%
    
  &_program-block  
    &__left
    &__right
      background secondeColor
      height 24px
      width 43.9%
      display inline-block
      margin-bottom 21px
    &__left
      margin-left 1.1%
    &__right 
      margin-left 10.22%

    &__inside
      background mainColor
      height 100%